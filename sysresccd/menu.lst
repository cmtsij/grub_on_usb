#
# ref http://www.sysresccd.org/Sysresccd-manual-en_How_to_install_SystemRescueCd_on_an_USB-stick#A.29_Recommended_USB_installation_method_from_Linux
#

set cdpath=/grub/sysresccd
#find --set-root --ignore-floppies --ignore-cd %cdpath%/systemrescuecd.iso

color light-gray/black light-blue/black
timeout 10
default 1

set skipsda=skipmount=/dev/sda1 skipmount=/dev/sda2 skipmount=/dev/sda3 skipmount=/dev/sda4 skipmount=/dev/sda5 skipmount=/dev/sda6 skipmount=/dev/sda7
set bs=backstore=%cdpath%/backstore.bs

#----------------------------------------------------
title SystemRescueCd altker32 std-32bit (skip ISO on sda)
kernel %cdpath%/iso/isolinux/altker32 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %skipsda% %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd altker64 std-64bit (skip ISO on sda)
kernel %cdpath%/iso/isolinux/altker64 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %skipsda% %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd altker32 std-32bit (any ISO)
kernel %cdpath%/iso/isolinux/altker32 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd altker64 std-64bit (any ISO)
kernel %cdpath%/iso/isolinux/altker64 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd std-32bit (skip ISO on sda)
kernel %cdpath%/iso/isolinux/rescue32 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %skipsda% %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd std-64bit (skip ISO on sda)
kernel %cdpath%/iso/isolinux/rescue64 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %skipsda% %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd std-32bit (any ISO)
kernel %cdpath%/iso/isolinux/rescue32 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

#----------------------------------------------------
title SystemRescueCd std-64bit (any ISO)
kernel %cdpath%/iso/isolinux/rescue64 isoloop=%cdpath%/systemrescuecd.iso setkmap=us docache %bs_%
initrd %cdpath%/iso/isolinux/initram.igz
savedefault

title MemTest+
kernel %cdpath%/iso/isolinux/memtestp
initrd %cdpath%/iso/isolinux/initrd.igz

title NT Password Editor
kernel %cdpath%/iso/ntpasswd/vmlinuz
initrd %cdpath%/iso/ntpasswd/initrd.cgz

title Gag
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/gag.img

title MHDD
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/mhdd.img

title Hardware Detection Tool
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/hdt.img

title Aida
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/aida.img

title Ranish Partition Manager
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/ranish.img

title FreeDOS
kernel %cdpath%/iso/isolinux/memdisk
initrd %cdpath%/iso/bootdisk/freedos.img
    
title Back to Main Menu
find --set-root --ignore-floppies --ignore-cd /grub/menu.lst 
configfile /grub/menu.lst

